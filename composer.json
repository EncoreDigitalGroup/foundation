{
    "name": "encoredigitalgroup/foundation",
    "type": "library",
    "description": "Common Functionality for Encore Digital Group Laravel Packages",
    "keywords": [
        "Encore Digital Group"
    ],
    "require": {
        "php": "^8.2",
        "brainmaestro/composer-git-hooks": "^3.0@alpha",
        "laravel/framework": "^10.0",
        "spatie/laravel-package-tools": "^1.14"
    },
    "require-dev": {
        "neronmoon/scriptsdev": "0.1.9",
        "orchestra/testbench": "^8.17",
        "pestphp/pest": "^2.28",
        "pestphp/pest-plugin-laravel": "^2.2",
        "tightenco/duster": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "EncoreDigitalGroup\\Foundation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest --coverage --min=80",
        "coverage": "vendor/bin/pest --coverage --min=80"
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "vendor/bin/duster fix"
            ]
        },
        "laravel": {
            "dont-discover": [],
            "providers": [
                "EncoreDigitalGroup\\ServiceProvider"
            ]
        },
        "scripts-dev": {
            "cghooks": "vendor/bin/cghooks",
            "format": "vendor/bin/duster fix",
            "post-autoload-dump": [
                "@cghooks update"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "neronmoon/scriptsdev": true
        }
    }
}
